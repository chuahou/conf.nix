{
	"languageserver": {
		"haskell": {
			"command": "haskell-language-server-wrapper",
			"args": ["--lsp"],
			"rootPatterns": [
				"*.cabal",
				"stack.yaml",
				"cabal.project",
				"package.yaml",
				"hie.yaml"
			],
			"filetypes": [
				"haskell",
				"lhaskell"
			],
			"initializationOptions": {
				"haskell": {
					"formattingProvider": "stylish-haskell"
				}
			}
		}
	},
	"coc.preferences.formatOnSaveFiletypes": ["haskell"]
}
